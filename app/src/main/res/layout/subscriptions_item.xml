<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:gravity="center"
        
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        xmlns:android="http://schemas.android.com/apk/res/android">
        
        <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/imgChannelPic"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/youtube1"
                android:layout_centerHorizontal="true"
                />
        
        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/newContentCircle"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="#4286f5"
                app:civ_border_color="?attr/bgColor"
                app:civ_border_width="2dp"
                android:layout_alignEnd="@id/imgChannelPic"
                android:layout_alignBottom="@id/imgChannelPic"
                />
        
        <TextView
                android:id="@+id/tvChannelName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgChannelPic"
                android:text="Mel Robbins"
                android:textAlignment="center"
                android:textColor="?attr/metaTextColor"
                android:maxWidth="66dp"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_centerHorizontal="true"
                />


</RelativeLayout>